# ===========================================
# TSG Chess Platform - Environment Variables
# ===========================================
# Copy this file to .env and update values for your environment

# Database
POSTGRES_USER=chess_user
POSTGRES_PASSWORD=chess_password_secure
POSTGRES_DB=chess_platform

# Backend
JWT_SECRET=your_super_secret_jwt_key_change_in_production
CORS_ORIGIN=http://localhost,http://localhost:8080

# Ports (optional - defaults shown)
BACKEND_PORT=3001
FRONTEND_PORT=8080

# Frontend build-time URLs
# For local: http://localhost:3001
# For production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:3001
VITE_WS_BASE_URL=http://localhost:3001

# ===========================================
# PRODUCTION EXAMPLE (uncomment and modify)
# ===========================================
# POSTGRES_PASSWORD=super_secure_production_password
# JWT_SECRET=super_secure_random_jwt_secret_at_least_32_chars
# CORS_ORIGIN=https://yourdomain.com
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_WS_BASE_URL=https://api.yourdomain.com
